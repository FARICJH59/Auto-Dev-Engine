{
  "name": "@ade/ui",
  "version": "1.0.0",
  "description": "ADE Fusion Stack UI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "node --watch dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "clean": "rm -rf dist",
    "sbom": "npx @cyclonedx/cyclonedx-npm --output-format json --output-file sbom.json",
    "audit": "npm audit --audit-level=high"
  },
  "dependencies": {
    "@ade/shared-sdk": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "typescript": "^5.3.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "@cyclonedx/cyclonedx-npm": "^1.16.0"
  }
}
